# SupportPal Configuration
SUPPORTPAL_API_KEY=your_supportpal_api_key_here
SUPPORTPAL_API_URL=https://your-instance.supportpal.com/api

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here

# Slack Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_SIGNING_SECRET=your_slack_signing_secret_here

# Slack Socket Mode (for slash commands without public IP)
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-level-token-here

# Slack channel where TARS posts its daily report (required for chat.postMessage)
# Find this by right-clicking the channel in Slack → Copy link → last segment is the channel ID (e.g. C01234ABCDE)
SLACK_CHANNEL_ID=C01234ABCDE

# MongoDB Configuration (for dashboard historical data)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/tars?retryWrites=true&w=majority

# Optional: Schedule Configuration (cron format)
# Examples:
#   0 9 * * * = Daily at 9 AM
#   0 */6 * * * = Every 6 hours
#   0 * * * * = Every hour
SCHEDULE_CRON=0 9 * * *

# Server Configuration
PORT=5000
HOST=0.0.0.0
